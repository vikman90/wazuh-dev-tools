{
  "name": "Wazuh-inteligence-platform",
 
  "build": {
    "dockerfile": "Dockerfile"
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "cschlosser.doxdocgen",
        "eamodio.gitlens",
        "esbenp.prettier-vscode",
        "github.copilot",
        "josetr.cmake-language-support-vscode",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-vscode.cmake-tools",
        "ms-vscode.cpptools",
        "notskm.clang-tidy",
        "redhat.vscode-xml",
        "twxs.cmake",
        "webfreak.debug",
        "xaver.clang-format",
        "yzhang.markdown-all-in-one",
        "znck.grammarly"
      ]
    }
  },

  "remoteUser": "vscode",
  
  "postCreateCommand": "sudo chown -R vscode:vscode /work && sudo chmod -R 777 /work",

  "mounts": [
    "source=${localWorkspaceFolder}/work,target=/work,type=bind,consistency=cached"
  ]
}
